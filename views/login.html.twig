{% extends 'layout.html.twig' %}

{% block title %}Identification{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if error %}
<div class="alert alert-danger">
    <strong>Echec de la connexion...</strong> {{ error }}
</div>
{% endif %}
<div class="well">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <ul class="nav nav-tabs nav-justified">
                <li class="active">
                    <a href="#connection" data-toggle="tab" aria-expanded="true">Connexion</a>
                </li>
                <li>
                    <a href="#inscription" data-toggle="tab" aria-expanded="false">Inscription</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="connection">
            <form class="form-signin form-horizontal login" role="form" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Entrez votre adresse de courriel" required autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <input type="password" name="_password" class="form-control" placeholder="Entrez votre mot de passe" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Se connecter</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="inscription">
            <form class="form-horizontal login" role="form" name="user" action="" method="post">
                <input type="hidden" id="user__token" name="user[_token]" value="">
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_lastName">Nom</label>
                    <div class="col-sm-3">
                        <input type="text" id="user_lastName" name="user[lastName]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_firstName">Pr√©nom</label>
                    <div class="col-sm-3">
                        <input type="text" id="user_firstName" name="user[firstName]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_address">Adresse</label>
                    <div class="col-sm-4">
                        <input type="text" id="user_address" name="user[address]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_zipCode">Code postal</label>
                    <div class="col-sm-2">
                        <input type="text" id="user_zipCode" name="user[zipCode]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_city">Ville</label>
                    <div class="col-sm-3">
                        <input type="text" id="user_city" name="user[city]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_mail">Courriel</label>
                    <div class="col-sm-3">
                        <input type="email" id="user_mail" name="user[mail]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_password_first">Mot de passe</label>
                    <div class="col-sm-3">
                        <input type="password" id="user_password_first" name="user[password][first]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label required" for="user_password_second">Mot de passe (confirmation)</label>
                    <div class="col-sm-3">
                        <input type="password" id="user_password_second" name="user[password][second]" class="form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-3">
                        <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-save"></span> S'inscrire</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}